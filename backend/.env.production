# Production Environment Configuration for FloatChat Backend
# Copy this file to .env and update with your production values

# Application Configuration
APP_NAME=FloatChat
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-production-key-change-this-immediately

# Database Configuration
DATABASE_URL=postgresql+asyncpg://floatchat_user:secure_password@db:5432/floatchat_db
POSTGRES_DB=floatchat_db
POSTGRES_USER=floatchat_user
POSTGRES_PASSWORD=secure_password_change_this
POSTGRES_HOST_AUTH_METHOD=md5

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# AI/LLM Configuration
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Oceanographic Data Sources
FTP_HOST=ftp.ifremer.fr
FTP_PATH=/ifremer/argo/dac/
ARGO_DATA_URL=https://data-argo.ifremer.fr

# CORS Configuration
CORS_ORIGINS=["https://yourdomain.com","https://api.yourdomain.com"]

# Security Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Port Configuration
API_PORT=8000
DB_PORT=5432
REDIS_PORT=6379
NGINX_PORT=80
NGINX_SSL_PORT=443

# Docker Registry (optional)
DOCKER_REGISTRY=your-registry.com/floatchat

# Monitoring and Logging
LOG_FILE=/app/logs/floatchat.log

# Resource Limits
MAX_WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

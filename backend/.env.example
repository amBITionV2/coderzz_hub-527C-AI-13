# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/floatchat_db

# AI/LLM Configuration
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Oceanographic Data Sources
FTP_HOST=ftp.ifremer.fr
FTP_PATH=/ifremer/argo/dac/
ARGO_DATA_URL=https://data-argo.ifremer.fr

# Application Configuration
APP_NAME=FloatChat
APP_VERSION=1.0.0
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/floatchat.log
